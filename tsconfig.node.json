{
  "compilerOptions": {
    "target": "ES2020",
    "module": "ESNext",
    "moduleResolution": "bundler",
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "strict": true,
    "skipLibCheck": true,
    "outDir": "dist",
    "rootDir": ".",
    "declaration": true,
    "resolveJsonModule": true,
    "composite": true
  },
  "include": [
    "src/server.ts",
    "src/services/fileService.ts",
    "src/types/index.ts",
    "bin/cli.ts",
    "vite.config.ts"
  ]
}
